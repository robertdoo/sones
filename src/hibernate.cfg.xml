<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">root</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/social_network_sniffe_multiuser_mode</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.c3p0.max_statements">50</property>
  <property name="hibernate.c3p0.min_size">5</property>
  <property name="hibernate.c3p0.max_size">20</property>
  <property name="hibernate.c3p0.timeout">300</property>
  <mapping resource="com/sones/businessLogic/KeywordManager/Keyword.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/Feed.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/Comment.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/FacebookToken.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/FacebookFriend.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/FacebookGroup.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/FeedsWithCommentTraffic.hbm.xml"/>
  <mapping resource="com/sones/businessLogic/Facebook/FacebookUser.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
